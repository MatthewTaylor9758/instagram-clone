extends layout.pug

include includes/auth-input.pug

append head
  script(src='/public/js/login.js' type="module" defer)

block content
    form#login-form
      img#insta-logo-fill-in-later
      h1 Log in to Instagram
      #errors-container
      +authInput('UserName', "userName")
        input(type='text' name='userName' required)
      +authInput('Password', "password")
        input(type='password' name='password' required)
      button(type="submit") Log in

    a(href="/signup") Not a user? Sign up!
